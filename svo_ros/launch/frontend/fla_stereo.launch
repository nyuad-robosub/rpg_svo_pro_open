<launch>
  <!-- SVO -->
  <node pkg="svo_ros" type="svo_node" name="svo" clear_params="true" output="screen">
    <!-- Camera and IMU topics to subscribe to -->
    <param name="cam0_topic" value="/stereo_publisher/left/image" type="str" />
    <param name="cam1_topic" value="/stereo_publisher/right/image" type="str" />
    <param name="calib_file" value="$(find svo_ros)/param/calib/fla_stereo.yaml" type="str" />

    <rosparam file="$(find svo_ros)/param/frontend_imu/fla_stereo.yaml" />

  </node>

  <!-- RVIZ + SVO GUI -->
  <node name="vis" pkg="rviz" type="rviz" args=" -d $(find svo_ros)/rviz_config.rviz" />
  <node name="svo_gui" pkg="rqt_gui" type="rqt_gui" args="-s rqt_svo.svo.Svo --args --topic svo" />
</launch>
